    function LoadName( what ) {
        $.ajax({
            type: "GET",
            async: true,
            data: { type: what },
            url:"@Url.Action("GetNames", "IslamicName")",
            dataType: "html",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                if (what == 'male') {
                    $('#maleName').empty();
                    $('#maleName').html(data);
                }
                if (what == 'female') {
                    $('#femaleName').empty();
                    $('#femaleName').html(data);
                }

