@{
    var duaList = (List<DuaDetailsModel>)ViewBag.duaList;
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="mt-4">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @if (duaList.Count > 0)
        {
            foreach (var x in duaList)
            {
                <div class="accordion-item cardBoxCustom accordionCL">
                    <div class="accordion-header">
                        <div class="accordion-button collapsed row px-2" data-bs-toggle="collapse" data-bs-target="#flush-@x.Id" aria-expanded="false" aria-controls="flush-@x.Id">
                            <div class="col-3 p-2">
                                <div class="header-image">

                                    <p class="surano tobng">@x.Serial</p>
                                </div>

                            </div>
                            <div class="col-7 p-0 col-middle">
                                <div class="row py-2">
                                    <div class="col-12 padding ">@x.Title</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="flush-@x.Id" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body" id="accrd_@x.Id">

                            <div>
                                <div class="row">
                                    <p style="padding-left: 8px;"><span style="font-weight:700;">দোয়া :</span><span class="arabicText" style="padding-left:5px">@x.Dua</span> </p>
                                </div>
                                <div class="row">
                                    <p style="padding-left: 8px;"><span style="font-weight:700">উচ্চারণ :</span> @x.Pronounciation</p>
                                </div>
                                <div class="row">
                                    <p style="padding-left: 8px;"><span style="font-weight:700">অর্থ :</span> @x.Meaning</p>
                                </div>

                                @if (x.Fazilat != "")
                                {
                                    <div class="row">
                                        <p style="padding-left: 8px;"><span style="font-weight:700">ফজিলত : :</span> @x.Fazilat</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        }



    </div>
</div>