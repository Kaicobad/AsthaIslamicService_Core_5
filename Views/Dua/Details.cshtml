@model AsthaIslamicService.Models.DuaDetailsModel

@{
    ViewData["Title"] = "দোয়া |";
    Layout = "~/Views/Shared/_LayoutIslamicLife.cshtml";
}

<style>


    .surano {
        margin: auto;
        position: relative;
        top: 30%;
        color: #129AE8;
        font-size: 1rem;
    }

    .header-image {
        background: url("/img/art_all.svg");
        background-position: center;
        background-size: contain;
        height: 50px;
        background-repeat: no-repeat;
        margin: auto;
        text-align: center;
    } 

    body {
        background-color: white;
    }

</style>

<nav class="navbar navbar-default row" role="navigation">
    <div class="row navbar-header text-center">

        <div class="col-2 justify-content-center bkIcon">
            <a asp-controller="dua" asp-action="index"> <i class="fa fa-angle-left fa_custom nav-fa-size"></i></a>

        </div>
        <div class="col-8 text-center justify-content-center">
            <p class="navbar-brand" style="font-family: NotoSansBengaliUI-Bold; font-size:20px;color:#ffffff">ইবাদত</p>

        </div>

    </div>
</nav>

<div class="detailBlock">

    <div class="row mt-3">
        <div class="col-2 p-0">

            <div class="header-image">


                @if (Model.Serial.Length == 1)
                {
                    <p class="surano tobng"> <span>0</span>@Model.Serial</p>
                }
                else
                {
                    <p class="surano tobng">@Model.Serial</p>
                }
            </div>

        </div>
        <div class="col-9 p-0" style="margin:auto">
            <div class="row">
                <div class="col-12 p-0">
                    <div class="col-12 padding">@Model.Title</div>

                </div>
            </div>
        </div>
    </div>
    <hr />
    <div>
        <div class="row">
            <p style="padding-left: 8px;"><span style="font-weight:700;">দোয়া :</span><span class="arabicText" style="padding-left:5px">@Model.Dua</span> </p>
        </div>
        <div class="row">
            <p style="padding-left: 8px;"><span style="font-weight:700">উচ্চারণ :</span> @Model.Pronounciation</p>
        </div>
        <div class="row">
            <p style="padding-left: 8px;"><span style="font-weight:700">অর্থ :</span> @Model.Meaning</p>
        </div>

        @if (Model.Fazilat != "")
        {
            <div class="row">
                <p style="padding-left: 8px;"><span style="font-weight:700">ফজিলত : :</span> @Model.Fazilat</p>
            </div>
        }


    </div>
</div>
<script>
    $(document).ready(function () {


        $('.tobng').each(function () {

            var currentElement = $(this);

            var value = currentElement.html().trim(); // if it is an input/select/textarea field
            currentElement.html(convertToBanglanumber(value));
            // TODO: do something with the value
        });
    });



    function convertToBanglanumber(input) {

        var finalEnlishToBanglaNumber =
            { '0': '০', '1': '১', '2': '২', '3': '৩', '4': '৪', '5': '৫', '6': '৬', '7': '৭', '8': '৮', '9': '৯' };
        var retStr = input;
        for (var x in finalEnlishToBanglaNumber) {
            retStr = retStr.replace(new RegExp(x, 'g'), finalEnlishToBanglaNumber[x]);
        }


        retStr = retStr.replace("AM", "এএম");
        retStr = retStr.replace("PM", "পিএম");
        return retStr;


    }

</script>
